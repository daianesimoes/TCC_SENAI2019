@model IEnumerable<Tcc_Senai.Models.Curso>

@{
    Layout = null;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.18/css/jquery.dataTables.min.css"
              asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />

    </environment>
}
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
<div class="card-block">
    <div class="card-header text-white bg-primary text-center h1">
        Cursos
    </div>
    <div class="card-body">
        <table id="tabela_cursos">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.NomeCurso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Modalidade.NomeModalidade)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnidadeCurricular.NomeUnidadeCurricular)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CargaHoraria)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sigla)
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.NomeCurso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modalidade.NomeModalidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnidadeCurricular.NomeUnidadeCurricular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CargaHoraria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sigla)
                    </td>
                    
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdCurso">Edit</a> |


                        <a asp-action="Delete" asp-route-id="@item.IdCurso">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer bg-success text-center">
        <a asp-action="Create" class="btn-success">
            Cadastrar Curso
        </a>
    </div>
</div>
