@model Tcc_Senai.Models.Turma

@{
    Layout = null;
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.min.css" />
    </environment>
    <environment exclude="Development">
        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
              asp-fallback-href="~/lib/font-awesome/css/font-awesome.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
}
<div class="card-block">
    <div class="card-header text-white bg-secondary text-center h1">Exibindo uma Turma existente</div>
    <div class="card-body">
        <div class="form-group">
            <label asp-for="IdTurma" class="control-label">
            </label>
            <br />
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-key" aria-hidden="true"></i>
                    </span>
                </div>
                <input asp-for="IdTurma" class="form-control" disabled="disabled" />
            </div>
            <label asp-for="NomeTurma" class="control-label"></label>
            <br />
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                    </span>
                </div>
                <input asp-for="NomeTurma" class="form-control" disabl
                       ed="disabled" />
            </div>
            <label asp-for="Curso.NomeCurso" class="control-labe
l"></label>
            <br />
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        
                        <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                    </span>
                </div>
                <input asp-for="Curso.NomeCurso" class="form-con
trol" disabled="disabled" />
            </div>
        </div>
    </div>
    <div class="card-footer bg-info text-center text-white">
        <a asp-action="Index" class="btn btn-danger">
            Voltar
        </a>
        <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#modalConfirmationDelete">
            Remover Turma
        </button>
    </div>
</div>
<div class="modal fade" id="modalConfirmationDelete" tabindex="-1"
     role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModal">
                    Remoção de Turma
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Confirma a exclusão da Turma @Model.NomeTurma.ToUpper() ??
                </p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdCurso" />
                    <input type="submit" value="Remover Turma" class="btn btn-primary" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        
                    </button>
                </form>
            </div>
            
        </div>
    </div>
</div>

